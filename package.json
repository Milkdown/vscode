{
    "name": "milkdown",
    "private": true,
    "displayName": "milkdown",
    "description": "Use milkdown in your favorite editor.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.59.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCustomEditor:milkdown.editor",
        "onCommand:milkdown.hello"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "customEditors": [
            {
                "viewType": "milkdown.editor",
                "displayName": "Milkdown Editor",
                "selector": [
                    {
                        "filenamePattern": "*.md"
                    }
                ],
                "priority": "default"
            }
        ],
        "commands": [
            {
                "command": "milkdown.hello",
                "title": "milkdown hello",
                "category": "milkdown"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile:clear": "rimraf dist && rimraf media",
        "compile:style": "postcss src/view/style.css --verbose -o media/style.css",
        "compile:view": "esbuild src/view/milkdown.ts --bundle --minify --sourcemap --outfile=\"media/milkdown.js\"",
        "compile:main": "webpack",
        "compile": "rimraf dist && rimraf media && postcss src/view/style.css --verbose -o media/style.css && esbuild src/view/view.ts --bundle --minify --sourcemap --outfile=media/view.js && webpack",
        "watch:style": "postcss src/view/style.css --watch --verbose -o media/style.css",
        "watch:view": "esbuild src/view/milkdown.ts --watch --bundle --sourcemap --outfile=\"media/milkdown.js\"",
        "watch:main": "webpack --watch",
        "watch": "concurrently -n view,main,style \"esbuild src/view/view.ts --watch --bundle --sourcemap --outfile=media/view.js\" \"webpack --watch\" \"postcss src/view/style.css --watch --verbose -o media/style.css\"",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "npm run test-compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@emotion/css": "^11.1.3",
        "@milkdown/core": "^4.10.1",
        "@milkdown/design-system": "^4.10.1",
        "@milkdown/plugin-history": "^4.10.1",
        "@milkdown/plugin-listener": "^4.10.1",
        "@milkdown/plugin-slash": "^4.10.1",
        "@milkdown/plugin-tooltip": "^4.10.1",
        "@milkdown/preset-gfm": "^4.10.1",
        "@milkdown/theme-nord": "^4.10.1",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/vscode": "^1.59.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "concurrently": "^6.2.1",
        "esbuild": "^0.12.21",
        "eslint": "^7.27.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "postcss": "^8.3.6",
        "postcss-cli": "^8.3.1",
        "postcss-import": "^14.0.2",
        "prettier": "^2.3.2",
        "ts-loader": "^9.2.2",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2",
        "webpack": "^5.38.1",
        "webpack-cli": "^4.7.0"
    }
}
